<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RecieverFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS kodni kiriting"
        android:textColor="#2D3A45"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:paddingHorizontal="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/phonetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Bir martalik kod  (+99 893) 461-**-**\nraqamiga yuborildi"
        android:paddingHorizontal="20sp"
        android:textColor="#2D3A45"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SMS kod"
            android:textColor="#2D3A45"
            android:paddingTop="10dp"
            android:paddingHorizontal="20sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:59"
            android:textColor="#2D3A45"
            android:paddingTop="10dp"
            android:paddingHorizontal="20sp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#2D3A45"
        android:textColorHint="#2D3A45"
        android:padding="15sp"
        android:background="@drawable/edt_background"
        android:hint="* * * *"
        android:inputType="numberPassword" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kod kelmadimi ?"
        android:textColor="#2D3A45"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="20sp"
        android:paddingTop="20sp"
        android:paddingHorizontal="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/resending"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18sp"
            android:layout_marginRight="7dp"
            android:src="@drawable/ic_refresh_ccw"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kodni qayta olish"
            android:textColor="#20D472"/>

    </LinearLayout>

</LinearLayout>